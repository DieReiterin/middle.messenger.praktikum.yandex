
<form class="settings-content">
    <div class="settings-content__main">
        <div class="settings-content__row settings-content__row_content-spaced">
            {{> Subtitle 
                className="settings-content__row-title"
                text="Почта"
            }} 
            {{> InputField
                className="settings-content__row-text"
                typeProfile="true"
                
                placeholder="pochta@yandex.ru" 
                error=""

                name="email"
                id="email"             
            }} 
        </div>
        <div class="settings-content__row settings-content__row_content-spaced">
            {{> Subtitle 
                className="settings-content__row-title"
                text="Логин"
            }} 
            {{> InputField
                className="settings-content__row-text"
                typeProfile="true"
                
                placeholder="ivanivanov" 
                error=""

                name="login"
                id="login"             
            }} 
        </div>
        <div class="settings-content__row settings-content__row_content-spaced">
            {{> Subtitle 
                className="settings-content__row-title"
                text="Имя"
            }} 
            {{> InputField
                className="settings-content__row-text"
                typeProfile="true"
                
                placeholder="Иван" 
                error=""

                name="first_name"
                id="first_name"             
            }}
        </div>
        <div class="settings-content__row settings-content__row_content-spaced">
            {{> Subtitle 
                className="settings-content__row-title"
                text="Фамилия"
            }} 
            {{> InputField
                className="settings-content__row-text"
                typeProfile="true"
                
                placeholder="Иванов" 
                error=""

                name="second_name"
                id="second_name"             
            }}
        </div>
        <div class="settings-content__row settings-content__row_content-spaced">
            {{> Subtitle 
                className="settings-content__row-title"
                text="Имя в чате"
            }} 
            {{> InputField
                className="settings-content__row-text"
                typeProfile="true"
                
                placeholder="Иван" 
                error=""

                name="display_name"
                id="display_name"             
            }}
        </div>
        <div class="settings-content__row settings-content__row_content-spaced">
            {{> Subtitle 
                className="settings-content__row-title"
                text="Телефон"
            }} 
            {{> InputField
                className="settings-content__row-text"
                typeProfile="true"
                
                placeholder="+7 (909) 967 30 30" 
                error=""

                name="phone"
                id="phone"             
            }}
        </div>
    </div>
    <div class="settings-content__footer">
        <div class="settings-content__row settings-content__row_content-align-center">
            {{> Button 
                className="settings-content__btn"
                text="Сохранить"
                page="profile"
            }} 
        </div>
    </div>
</form>
