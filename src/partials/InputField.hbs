<div class="input-field {{ className }}">
    <label class="input-field__label" for="login">
        {{ label }}
    </label>
    <input name="{{ login }}" class="input-field__control" type="text" id="{{ login }}" placeholder="{{ placeholder }}"
        value="{{ value }}">
    <label class="input-field__error" for="login">
        {{ error }}
    </label>
</div>